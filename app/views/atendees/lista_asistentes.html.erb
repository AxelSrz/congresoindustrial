		          <% @atendees.each_with_index do |atendee, index| %>
							<tr>
								<th scope="row"><%= index + 1 %></th>
		            <td><%= atendee['nombre'] %></td>
		            <td><%= atendee['email'] %></td>
								<% if atendee.hora_asignada %>
		            <td><%= l(atendee.hora_asignada, format: '%b/%d/%Y, hora: %H:%M') %></td>
								<% else %>
								<td>Sin asignar</td>
								<% end %>
		            <% if atendee.visit %>
		              <td><%= atendee.visit.empresa %></td>
		            <% else %>
		              <td>Sin inscribir</td>
		            <% end %>
		            <% if atendee.workshop %>
		              <td><%= atendee.workshop.representante %></td>
		            <% else %>
		              <td>Sin inscribir</td>
		            <% end %>
								<% if atendee.recovery_code %>
		              <td><%= atendee.recovery_code %></td>
								<% else %>
			            <td> </td>
			          <% end %>
							</tr>
		          <% end %>
						</tbody>
					</tbody>
				</table>


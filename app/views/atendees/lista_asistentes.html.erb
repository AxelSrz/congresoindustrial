				<h1>Asistentes</h1>
				<p><%= link_to "Ver asistentes no confirmados", no_confirmados_path %></p>
				<hr>
				<!-- tabla -->
				<table class="table table-striped">
					<thead>
						<tr>
							<th>#</th>
							<th>Nombre completo</th>
							<th>Email</th>
